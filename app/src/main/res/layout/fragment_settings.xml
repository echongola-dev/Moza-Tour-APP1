<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
        android:gravity="center"
            android:layout_marginRight="10sp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="0.4"
            android:src="@drawable/ic_contact" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacte"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="O que deseria mudar?"
                android:textSize="13sp"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
        </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:backgroundTint="#4A4A4A">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:src="@drawable/ic_share"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partilhar"
                    android:layout_marginLeft="15sp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="Partilhe o aplicativo com os seus amigos"
                    android:textSize="13sp"
                    android:gravity="left"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="15sp"
            android:backgroundTint="#4A4A4A"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.4"
                android:src="@drawable/ic_rate" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avaliar"
                    android:layout_marginLeft="15sp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:backgroundTint="@color/white"
                    android:gravity="left"
                    android:text="Gostou?  Avalie na PlayStore"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp"
            android:backgroundTint="#4A4A4A"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:src="@drawable/ic_person"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desenvolvedor"
                    android:textSize="15sp"
                    android:layout_marginLeft="15sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edio Chongola"
                    android:layout_marginLeft="20sp"
                    android:gravity="left"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:backgroundTint="#4A4A4A"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:src="@drawable/ic_info"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versao"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15sp"
                    android:gravity="start"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="0.0.1.0"
                    android:layout_marginStart="20sp"
                    android:gravity="start"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    tools:targetApi="lollipop" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>